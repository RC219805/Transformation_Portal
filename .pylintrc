[MASTER]
ignore=build,dist,.venv,.eggs,tools/deprecated,src/transformation_portal,scripts
jobs=0
persistent=no

[MESSAGES CONTROL]
disable=
    C0114, C0115, C0116,  # missing-docstring family
    R0902, R0903, R0913,  # class/method arg counts
    W0511,                # TODO comments
    E0401, E0611,         # import errors (optional deps)
    R0801,                # duplicate-code (intentional duplicates in src/ refactor and deprecated/)
    C0302,                # too-many-lines (large files are intentional)
    R0914, R0912, R0915,  # too-many-locals/branches/statements (complexity is intentional)
    R0911, R0917,         # too-many-return-statements, too-many-positional-arguments
    C0301,                # line-too-long (using flake8's max-line-length=127)
    C0103,                # invalid-name (some variable names are intentional)
    W0718, W0613, W0612,  # broad-exception-caught, unused-argument, unused-variable (acceptable)
    C0415,                # import-outside-toplevel (lazy imports are intentional)
    C0411, C0412,         # wrong-import-order, ungrouped-imports (not critical)
    C0325,                # superfluous-parens (readability preference)
    R1735, R1705,         # use-dict-literal, no-else-return (style preference)
    W0611,                # unused-import (managed by flake8)
    C0209,                # consider-using-f-string (not critical)
    W1514,                # unspecified-encoding (acceptable for most cases)
    E1123,                # unexpected-keyword-arg (false positives with optional deps)
    W0130,                # duplicate-value (acceptable in some contexts)
    W1203, W1201,         # logging-fstring-interpolation, logging-not-lazy (style preference)
    W0212                 # protected-access (acceptable when intentional)

[FORMAT]
max-line-length=127

[TYPECHECK]
ignored-modules=realesrgan,diffusers,controlnet_aux,torch,tifffile,luxury_tiff_batch_processor
